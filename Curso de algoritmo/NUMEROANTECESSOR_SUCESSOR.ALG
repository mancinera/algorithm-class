Algoritmo "NumeroAntecessor_Sucessor"


Var
   numero, antecessor, sucessor: inteiro


Inicio
   Escreva("Digite um número: ")
   Leia (Numero)
   
   antecessor <- (Numero - 1)
   sucessor <- (Numero + 1)
   
   Escreva ("O número é ",numero, ", seu antecessor é ",antecessor, ", e seu sucessor é ", sucessor)
Fimalgoritmo